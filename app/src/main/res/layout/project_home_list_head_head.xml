<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/project_home_list_head">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/projectIcon"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:src="@color/font_black_0" />

        <TextView
            android:id="@+id/projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/projectIcon"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/projectIcon"
            android:layout_toRightOf="@+id/projectIcon"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/font_black_2"
            android:textSize="18sp" />

        <TextView
            android:layout_width="15dp"
            android:id="@+id/recommendIcon"
            android:textColor="@color/white"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/projectName"
            android:layout_alignTop="@id/projectName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@drawable/round_rect_shape_green2"
            android:visibility="gone"
            android:text="荐"/>

        <TextView
            android:id="@+id/projectAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/projectName"
            android:layout_alignStart="@+id/projectName"
            android:layout_below="@+id/projectName"
            android:layout_marginTop="7dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/font_gray" />

        <View
            android:visibility="gone"
            android:id="@+id/iconPrivate"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignLeft="@+id/projectAuthor"
            android:layout_alignStart="@+id/projectAuthor"
            android:background="@drawable/ic_project_private1"
            android:layout_alignTop="@+id/projectAuthor"
            android:layout_marginTop="3dp" />
    </RelativeLayout>

    <net.coding.program.third.DashLine
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="0.5dp"
        android:background="@color/font_gray" />
</merge>