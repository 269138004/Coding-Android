<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/divide">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:background="@color/stand_bg">

            <FrameLayout
                android:id="@+id/userBackgroundLayout"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/userBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_home_bg"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#33000000"/>
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/icon_sharow"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/user_detail_sharow">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_centerInParent="true"
                    android:background="@color/red_f75"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/icon_sharow"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fans"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="粉丝"
                        android:textColor="@color/font_6"
                        android:textSize="12sp"/>


                    <TextView
                        android:id="@+id/follows"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="关注"
                        android:textColor="@color/font_6"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="3"
                        android:background="#F2F4F6">

                        <TextView
                            android:id="@+id/tv_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="已关注"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="#F2F4F6">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_private_letter"/>


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawableRight="@drawable/ic_sex_boy"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="阿朔"
                android:drawablePadding="10dp"
                android:textColor="@color/font_2"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="详细信息"
                android:textColor="@color/font_9"
                android:textSize="13sp"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_location"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="广东，深圳市"
            android:textColor="@color/color_hint"
            android:textSize="14sp"/>

        <HorizontalScrollView
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#F2F4F6"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:text="已关注"/>


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_des"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLength="50"
            android:text="少点套路，多点正常，少点套路，多点正常，至少我可有不忘记初心～少点套路，多点正常，至少我可有不忘记初心～至少我可有不忘记初心～少点套路，多点正常，至少我可有不忘记初心～少点套路，多点正常，至少我可有不忘记初心～"
            android:textColor="@color/color_hint"
            android:textSize="14sp"/>


        <LinearLayout
            android:id="@+id/layoutLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/stand_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <include layout="@layout/divide_middle_15"/>

            <include
                android:id="@+id/pos0"
                layout="@layout/list_item_2_text"/>

            <include layout="@layout/divideline_15"/>

            <include
                android:id="@+id/pos1"
                layout="@layout/list_item_2_text"/>

            <include layout="@layout/divideline_15"/>

            <include
                android:id="@+id/pos2"
                layout="@layout/list_item_2_text"/>

            <include layout="@layout/divideline_15"/>


        </LinearLayout>


        <include layout="@layout/divide_middle_15"/>


        <LinearLayout xmlns:listItem1="http://schemas.android.com/apk/res-auto"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/stand_bg"
                      android:orientation="vertical">

            <net.coding.program.common.widget.ListItem1
                android:id="@+id/clickProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                listItem1:itemIcon="@drawable/user_home_project"
                listItem1:itemTitle="TA的项目"/>

            <include layout="@layout/divideline_15"/>

            <net.coding.program.common.widget.ListItem1
                android:id="@+id/clickMaopao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                listItem1:itemIcon="@drawable/user_home_maopao"
                listItem1:itemTitle="TA的冒泡"/>

            <include layout="@layout/divideline_15"/>

            <net.coding.program.common.widget.ListItem1
                android:id="@+id/clickTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                listItem1:itemIcon="@drawable/user_home_topic"
                listItem1:itemTitle="TA的话题"/>

            <include
                android:id="@+id/divideLocal"
                layout="@layout/divideline_15"/>

            <net.coding.program.common.widget.ListItem1
                android:id="@+id/clickLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                listItem1:itemIcon="@drawable/user_home_local"
                listItem1:itemTitle="本地文件"/>

            <include
                android:id="@+id/pointDivide"
                layout="@layout/divide_bottom_15"
                android:visibility="gone"/>

            <net.coding.program.common.widget.ListItem1
                android:id="@+id/clickPointRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:visibility="gone"
                listItem1:itemIcon="@drawable/user_home_points"
                listItem1:itemTitle="我的码币"/>

        </LinearLayout>

        <include layout="@layout/divide_bottom_15"/>

        <RelativeLayout
            android:id="@+id/sendMessageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divide"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/sendMessage"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/button_round_green"
                android:gravity="center"
                android:text="发消息"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>