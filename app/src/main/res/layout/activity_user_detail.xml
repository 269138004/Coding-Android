<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide_15_e5">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:contentPaddingLeft="0dp"
            app:contentPaddingRight="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="17dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="188dp"
                    android:id="@+id/userBackgroundLayout">

                    <ImageView
                        android:id="@+id/userBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_home_bg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#33000000" />
                </FrameLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:layout_alignBottom="@id/userBackgroundLayout"
                    android:layout_marginBottom="-27dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userBackgroundLayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="44dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="chenchao"
                    android:textColor="@color/font_black_content"
                    android:textSize="18sp" />


                <ImageView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/name"
                    android:src="@drawable/ic_sex_boy" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignLeft="@id/name"
                    android:layout_below="@id/name"
                    android:gravity="bottom"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:textColor="@color/font_black_comment"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="13dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/divide_line_color" />

                    <TextView
                        android:id="@+id/follows"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="@color/font_black_comment"
                        android:textSize="16sp" />


                </LinearLayout>


                <CheckBox
                    android:id="@+id/followCheckbox"
                    android:layout_width="83dp"
                    android:layout_height="33dp"
                    android:layout_alignLeft="@+id/name"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_marginTop="17dp"
                    android:button="@drawable/checkbox_fans"
                    android:visibility="visible" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <include layout="@layout/divide_15" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/pos0"
                    layout="@layout/list_item_2_text" />

                <include layout="@layout/divide_1_12" />

                <include
                    android:id="@+id/pos1"
                    layout="@layout/list_item_2_text" />

                <include layout="@layout/divide_1_12" />

                <include
                    android:id="@+id/pos2"
                    layout="@layout/list_item_2_text" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <include layout="@layout/divide_15" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/clickProject"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15sp"
                    android:paddingRight="15sp">

                    <View
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:background="@drawable/user_home_project"
                        android:layout_marginRight="15dp" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="TA的项目"
                        android:textColor="#222222"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/user_home_arrow" />

                </LinearLayout>

                <include layout="@layout/divide_1_12" />


                <LinearLayout
                    android:id="@+id/clickMaopao"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15sp"
                    android:paddingRight="15sp">

                    <View
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:background="@drawable/user_home_maopao"
                        android:layout_marginRight="15dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="TA的冒泡"
                        android:textColor="#222222"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/user_home_arrow" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <include layout="@layout/divide_15" />

        <RelativeLayout
            android:id="@+id/sendMessageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divide_15_e5"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/sendMessage"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/button_round_green"
                android:gravity="center"
                android:text="发消息"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>