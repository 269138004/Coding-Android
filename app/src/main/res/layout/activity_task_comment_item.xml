<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Commentlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_default_user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon"
        android:layout_toRightOf="@+id/icon"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/icon"
                android:layout_below="@+id/name"
                android:layout_marginRight="12dp"
                android:background="@drawable/content_pressed_selector"
                android:lineSpacingExtra="1dp"
                android:lineSpacingMultiplier="1.1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/font_black_content"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/imagesLayout0"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <include
                layout="@layout/comment_image"
                android:id="@+id/image0" />

            <include
                layout="@layout/comment_image"
                android:id="@+id/image1" />

            <include
                layout="@layout/comment_image"
                android:id="@+id/image2" />

            <include
                layout="@layout/comment_image"
                android:id="@+id/image3" />

            <include
                layout="@layout/comment_image"
                android:id="@+id/image4" />

            <include
                layout="@layout/comment_image"
                android:id="@+id/image5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imagesLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/layoutContent"
                android:layout_below="@id/layoutContent"
                android:text="超级小胖纸"
                android:textColor="@color/font_black_comment"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/name"
                android:drawableLeft="@drawable/ic_clock"
                android:drawablePadding="5dp"

                android:text="3分钟前"
                android:textColor="@color/font_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
