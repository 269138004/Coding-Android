<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/project_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
        android:id="@+id/icon"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_width="@dimen/project_icon_width"
        android:layout_height="@dimen/project_icon_width"
        android:background="@drawable/project_button_icon_dynamic" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动态"
        android:layout_marginLeft="@dimen/padding_15"

        android:textColor="@color/font_black_2"
        android:textSize="@dimen/project_icon_text" />

</LinearLayout>
